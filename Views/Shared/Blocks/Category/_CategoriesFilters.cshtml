@model IList<DomainProduct.Filter.FilterCategory>

@if (Model != null)
{
    <div class="active title">Categorias<i class="dropdown icon"></i></div>
    <div class="active content">
        <div class="ui form">
            <div class="grouped fields">
                @foreach (var category in Model.OrderBy(c => c.Level).ThenBy(c => c.Name))
                    {    
                    <div class="field @(category.Level.Length == 2 ? "default" : "children")">
                        @if (category.Level.Length == 6) {
                                <div class="ui checkbox checkCategory" style="margin-left:1.5rem;" data-type="idCategories" id="@category.IdCategory" name="@category.Name" data-reference="Categorias">
                        <input type="checkbox" name="@category.Name" id="checkCategory_@category.IdCategory" tabindex="0" value="@category.IdCategory">
                        <label>@category.Name</label>
                        </div>
                        }
                        else
                        {
                                <div class="ui checkbox checkCategory" data-type="idCategories" id="@category.IdCategory" name="@category.Name" data-reference="Categorias">
                                <input type="checkbox" name="@category.Name" id="checkCategory_@category.IdCategory" tabindex="0" value="@category.IdCategory">
                                <label>@category.Name</label>
                                </div>
                        }
                        </div>
                    }
            </div>
        </div>
    </div>
}